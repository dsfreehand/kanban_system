{
  "compilerOptions": {
    "baseUrl": ".",  // Resolves from the root of your project
    "rootDir": "src", 
    "outDir": "dist",
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ESNext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "sourceMap": true
  },
  "include": ["src/**/*"],  // Ensure all source files are included
  "exclude": ["node_modules", "dist"]  // Exclude unnecessary folders
}
